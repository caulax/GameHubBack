
@{
    ViewData["Title"] = "Upload";
}

<h2>Загрузить сценарий</h2>
<p>Загрузите ваш сценарий с помощью этой формы:</p>

<form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Upload" style="max-width: 300px">
    <div class="form-group">
        <div class="custom-file">
            <input type="file" name="file" class="custom-file-input" accept=".zip" required>
            <label class="custom-file-label" for="file" name="filename">Выбрать файл...</label>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Загрузить" class="btn" />
    </div>
</form>